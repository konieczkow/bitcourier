#!/usr/bin/env ruby

$:.unshift File.dirname(__FILE__) + '/../lib'

require 'thor'
require 'elchat'

class ElchatCli < Thor

  desc 'node', 'Start Elchat node'
  method_option :port, default: 6081, aliases: '-p', desc: 'port on which the Elchat node will listen'
  def node
    daemon = Elchat::Daemon.new
    daemon.run(options.port)
  end

end

ElchatCli.start
